{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start Pong",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/pong",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable automate format for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build" 
        }
    ]
}