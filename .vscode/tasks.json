{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "init",
			"command": "/usr/bin/meson",
			"args": [
				"build"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"type": "shell",
			"label": "build",
			"command": "/usr/bin/ninja",
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn": ["init"],
		},
	]
}